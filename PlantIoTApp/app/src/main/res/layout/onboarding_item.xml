<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Background image container -->
    <FrameLayout
        android:id="@+id/onboardingBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background image -->
        <ImageView
            android:id="@+id/onboardingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <!-- Title text, positioned at the top above the background -->
    <TextView
        android:id="@+id/onboardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#2BB3A9"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true" />

    <!-- Description text, positioned below the title -->
    <TextView
        android:id="@+id/onboardingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboardingTitle"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:layout_margin="50dp"
        android:textColor="#666666"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
